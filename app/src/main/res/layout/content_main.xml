<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nden.gapquiz.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/illustration">

  <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="GOOD ACADEMIC PRACTICE QUIZ"
        android:textAlignment="center"
        android:layout_centerHorizontal="false"
        android:textSize="25sp"
        android:textColor="#230000"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginBottom="40dp"/>


     <Button
         android:id="@+id/startQuizBtn"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/title"
         android:text="START QUIZ"
         android:textSize="16sp"
         android:textColor="#0f0101"
         android:background="#feba9b"
         android:typeface="serif"
         android:layout_marginBottom="3dp"/>

        <Button
            android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startQuizBtn"
        android:text="PREVIOUS RESULT"
        android:textSize="16sp"
        android:textColor="#0f0101"
        android:background="#feba9b"
        android:typeface="serif"
        android:layout_marginBottom="3dp"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:text="ACADEMIC WRITING UNIT"
        android:textSize="16sp"
        android:paddingBottom="2dp"
        android:background="#feba9b"
        android:typeface="serif"
        android:textColor="#230000"
        android:layout_marginBottom="3dp"/>

    <Button
        android:id="@+id/tutorialsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn3"
        android:text="TUTORIALS"
        android:textSize="16sp"
        android:paddingBottom="2dp"
        android:background="#feba9b"
        android:typeface="serif"
        android:textColor="#230000"
        android:onClick="btnOnClick"
        android:layout_marginBottom="3dp"/>
    <Button
        android:id="@+id/aboutGapQuizBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tutorialsBtn"
        android:text="ABOUT GAP QUIZ"
        android:textSize="16sp"
        android:paddingBottom="2dp"
        android:background="#feba9b"
        android:typeface="serif"
        android:textColor="#230000"
        android:onClick="btnOnClick"
        android:layout_marginBottom="3dp"/>
</RelativeLayout>
